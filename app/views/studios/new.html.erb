<%= render "home/navbar" %>
<div class = "container spec submitter custom-form">
  <h1>New Studio</h1>
  <%= bootstrap_form_for(@studio, layout: :inline) do |f| %>
    <div>
      <%= f.text_field :name, placeholder: 'Name', label: "Studio Name: " %>
    </div>
    <div>
      <%= f.text_area :description, placeholder: 'Briefly introduce your studio', label: "About: " %>
    </div>
    <div>
      <%= f.text_field :fb_url, placeholder: 'Facebook URL', label: "Facebook URL: " %>
    </div>
    <div>
      <%= f.text_field :twtr_url, placeholder: 'Twitter URL', label: "Twitter URL: " %>
    </div>
    <div>
      <%= f.text_field :yt_url, placeholder: 'Youtube URL', label: "YouTube URL: " %>
    </div>
    <div>
      <%= f.text_field :ig_url, placeholder: 'Instagram URL', label: "Instagram URL: " %>
    </div>
    <div>
      <%= f.text_field :website_url, placeholder: 'Website URL', label: "Website: "%>
    </div>
    <div>
      <%= f.email_field :email, placeholder: 'Email', label: "Email: " %>
    </div>
    <div>
      <%= f.text_field :phone_area_code, label: "Phone: (", :size => 3 %><b> )</b>
      <%= f.text_field :phone_1, hide_label: true, :size => 3  %><b>&nbsp;-</b>
      <%= f.text_field :phone_2, hide_label: true, :size => 5  %>
    </div>
    <div>
      <%= f.submit 'Create Studio' %>
    </div>
    <% end %>
</div>