<%= render "home/navbar" %>
<div class = "container spec submitter custom-form">
  <h1>Edit Studio Information</h1>
  <%= bootstrap_form_for(@studio, layout: :inline) do |f| %>
    <div>
      <%= f.text_field :name, label: "Studio Name: " %>
    </div>
    <div>
      <%= f.text_area :description, label: "About: " %>
    </div>
    <div>
      <%= f.text_field :fb_url, label: "Facebook URL: " %>
    </div>
    <div>
      <%= f.text_field :twtr_url, label: "Twitter URL: " %>
    </div>
    <div>
      <%= f.text_field :yt_url, label: "YouTube URL: " %>
    </div>
    <div>
      <%= f.text_field :ig_url, label: "Instagram URL: " %>
    </div>
    <div>
      <%= f.text_field :website_url, label: "Website: " %>
    </div>
    <div>
      <%= f.email_field :email, label: "E-mail: " %>
    </div>
    <div>
      <%= f.text_field :phone_area_code, label: "Phone: (", :size => 3 %><b> )</b>
      <%= f.text_field :phone_1, hide_label: true, :size => 3  %><b>&nbsp;-</b>
      <%= f.text_field :phone_2, hide_label: true, :size => 5  %>
    </div>
    <div>
      <%= f.submit 'Save' %>
    </div>
    <% end %>
</div>