<% content_for :google_maps_js do %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyDCp9uQBt3IdKhOxbl1LgX1XFOCsKtdlRQ" %>
<% end %>

<%= render "home/navbar" %>
<div class="profile-container spec container">
	<div class="profile-header row">
			<div class="col-md-3 propic">
				<%= image_tag "studio1.jpg" %>
			</div>
			<div class="col-md-4 main-info">
			
			<h1><b><%=@studio.name%></b>
			<% if current_user_owns_studio(@studio.id) %>
		      <%= link_to 'Edit', edit_studio_path(studio_id: @studio), class: "btn btn-warning" %> 
		    <% end %>
		</h1>
		<p>
		<%= @studio.address_line1 %><br/>
		<%= @studio.address_line2 %><br/>
        <%= @studio.city %>, <%= @studio.state%> <%= @studio.zip_code %><br>
		<a href = <%= @studio.website_url %> target="_blank"> <%= @studio.website_url %></a> <br/>
		<h4><%=@studio.description%></h4>
			</div>
		<div class="col-md-5 social-media">

                  <%= make_contact_icon(@studio.yt_url,
		      "youtube-icon.png") %>
                  <%= make_contact_icon(@studio.fb_url,
		      "facebook-icon.png") %> <br>
                  <%= make_contact_icon(@studio.ig_url,
		      "insta-icon.png") %>
                  <%= make_contact_icon(@studio.twtr_url,
		      "twitter-icon.png") %> <br>

			<b>E-MAIL:</b> <%= @studio.email %> <br/>

                        <% phone_num = @studio.get_phone_number %>
                        <% if phone_num != "" %>
			<b>PHONE: </b><%= phone_num %>
                        <% end %>
                        
			</div>
	</div>

	<h2>Upcoming Events  
		<% if current_user_owns_studio(@studio.id) %>
      <%= link_to 'Create Event', new_studio_event_path(studio_id: @studio), class: "btn btn-warning" %> 
    <% end %>
   </h2>
		<% @events.each do |e| %>
		<div>
		  <h3><b><a href=<%= event_path(e) %>><%= e.name %></a></b></h3>
		  <div><%= e.event_date_time %></div></li>
		</div>
		<% end %>

<h2>Studio Location
<% if current_user_owns_studio(@studio.id) %>
	<a href="/studios/<%= params[:id] %>/set_location/"
    data-no-turbolink="true" class="btn btn-warning">Edit location</a>
<% end %>
</h2>
	<div id="show-studio-map-canvas"></div>
        <!-- see makeStreetView function in --
          -- javascripts/show_studio_map.js -->
        <div id="show-studio-streetview-canvas"></div>
    

</div>
  
<div id="get_studio_id"><%= @studio.id %></div>
