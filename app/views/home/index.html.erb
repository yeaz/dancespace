  <% end %>

	<%= render "home/navbar" %>
	<div class="container spec">
		<div class="row">
			<!-- Side bar  -->
	        <div class="col-md-3" id="sidebar">
	        	<%= render "home/sidebar" %>
	        </div>
        <!-- Content -->
			<div class="col-md-9" style="background:#eee"
