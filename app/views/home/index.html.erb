<% if user_signed_in? %>
  <% content_for :google_maps_js do %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyDCp9uQBt3IdKhOxbl1LgX1XFOCsKtdlRQ" %>
  <% end %>

	<%= render "home/navbar" %>
	<div class="container spec">
		<div class="row">
			<!-- Side bar with actions -->
	        <div class="col-md-3">
	        	<%= render "home/sidebar" %>
	        </div>
			<!-- Page Content TODO: javascript it up-->
	    	<div class="col-md-9" style="background:#eee">
	    		<h2>Events Feed</h2>
	    		<p><span class="lead">Find events near you</span><br /></p>
	    		<ul>
                          <%= render "home/events_near_you" %>
	    		</ul>
	    	</div>
		</div>
	</div>
<% else %>

	<div class="ds-docs-header" id="content">
	  	<div class="container headercopy">
		    <h1>DanceSpace</h1>
		    <p class="spec">An online community for dancers.</p>
		    <p style="margin-top:10px;">
		    <a type="button" class="btn btn-warning btn-lg" href="<%= signup_path %>">Sign up</a>
		    <a type="button" class="btn btn-warning btn-lg" href="<%= login_path %>">Login</a>
			</p>
	    </div>
	    <br />
		<div class="container center search">
			<form name="input" method="get">
			Content: <input type="text" name="content">
			Location: <input type="text" name="location">
			<button type="submit" class="btn btn-default btn-lg">Search</button>
			</form>
		</div>
	</div>

<% end %>

