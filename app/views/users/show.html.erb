<%= render "home/navbar" %>
<div class ="profile-container spec container">
	<div class="profile-header row">
		<div class="propic col-md-3">
			<%= image_tag "blank_profile.jpg" %>
		</div>

		<div class="main-info col-md-4">
			<h1><b><%= @user.username %></b>
				<% if current_user.id == @user.id %>
					<%= link_to 'Edit', user_settings_path, class: "btn btn-warning" %>
				<% end %>
			</h1>
			<p><%= @user.title %><br/>
				<%= @user.city %>, <%= @user.state %><p>
			<h4><div class="blurb"><%=@user.blurb%></div></h4>
		</div>
		<div class="col-md-5 social-media">
			<a href=<%=@user.yt_url%> target="_blank"> <%= image_tag "youtube-icon.png" %> </a>
			<a href=<%=@user.fb_url%> target="_blank"> <%= image_tag "facebook-icon.png" %> </a><br/>
			<a href=<%=@user.ig_url%> target="_blank"> <%= image_tag "insta-icon.png" %> </a>
			<a href=<%=@user.twtr_url%> target="_blank"> <%= image_tag "twitter-icon.png" %> </a><br/>	
			<b>E-MAIL:</b> <%= @user.email %> <br/>
			<b>PHONE: </b>(<%= @user.phone_area_code %>) <%= @user.phone_1 %> - <%= @user.phone_2 %>
		</div>
	</div>
	<br>
	<h2>Video Portfolio <a href="<%= new_video_path %>" class="btn btn-lg btn-warning">Share a Video</a></h2>
	<% for v in @user.videos do%>
		<div class="row">
			<div class="col-md-3 vid-thumbnail">
				<img src="http://img.youtube.com/vi/<%=v.youtube_id%>/0.jpg" >
			</div>
			<div class="col-md-8">
				<h3><a href=<%= video_path(v) %>><%= v.title %></a><br/></h3>
				<%= v.description %>
			</div>
		</div>
		<hr>
	<% end %>

	<br/>
	<h2>Experience</h2>
	<ul>
		<% @user.experiences.each do |exp| %>
	    	<li><%= exp.content %>
	    	<% exp.experiencelinks.each do |link| %>
	      		<a href="<%= get_url(link) %>"><%= get_title(link) %></a>
	    	<% end %>
	    	</li>
	  	<% end %>
  	</ul>
  	<br/>

  	<h2>Studios Owned
  		<% if current_user.id == @user.id %>
				<%= link_to 'Create Studio', new_studio_path, class: "btn btn-warning btn-lg" %>
		<% end %>
	</h2>

	<ul>
	  	<% for s in @user.get_studios_that_user_owns %>
		  	<h3>
		  		<%= link_to(s.name, studio_path(s)) %>
		  	</h3>
	  	<%end%>
  	</ul>
</div>
