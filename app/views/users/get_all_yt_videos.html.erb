<%= render "home/navbar" %>
<div class="container">
  <h1> All Videos for <a href='<%= user_path(@user) %>'><%= @user.get_full_name%></a></h1>
    <div id='ytviewer'></div>

  <% for video in @videos %>
      <img class='yt-thumb' style='padding-bottom:10px;' onclick="ytview('<%=video%>')" src="http://img.youtube.com/vi/<%=video%>/0.jpg">&nbsp;
  <% end %>
  <br>
  <!-- Next/Prev -->
  <div style='text-align:center'>
  <% if @prevPageToken.present? %>
      <%= link_to 'Prev', user_youtube_videos_path(@user, params: { page: @prevPageToken }), class: "btn btn-lg btn-warning"%>
    <% end %>
    <% if @nextPageToken.present? %>
      <%= link_to 'Next', user_youtube_videos_path(@user, params: { page: @nextPageToken }), class: "btn btn-lg btn-warning" %>
    <% end %>
  </div>
</div>
