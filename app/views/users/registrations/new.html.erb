<%= render "home/navbar" %>
<div class="container spec submitter">
<p>
<h1>Join the crew!</h1>
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>
  <div>
  <%= f.text_field :username, hide_label: true, :placeholder => "Username", autofocus: true %>
  </div>

  <div>
  <%= f.text_field :first_name, hide_label: true, :placeholder => "First Name" %>
  </div>

  <div>
  <%= f.text_field :last_name, hide_label: true, :placeholder => "Last Name" %>
  </div>

  <div>
  <%= f.email_field :email, hide_label: true, :placeholder => "Email address" %>
  </div>

  <div>
    <%= f.password_field :password, autocomplete: "off", hide_label: true, :placeholder => "Password" %>
  </div>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, :placeholder => "Confirm password" %>
  </div>

  <div><%= f.submit "Sign up", class: "btn btn-warning btn-lg btn-block" %>
  </div>
<% end %>
</p>
</div>
