<%= render "home/navbar" %>
<div class="spec" style="max-width: 330px; padding: 15px; margin: 0 auto">
<h1>Welcome back!</h1>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div>
  <%= f.email_field :email, autofocus: true, hide_label: true, :placeholder => "Email address" %></div>

  <div>
    <%= f.password_field :password, autocomplete: "off", hide_label: true, :placeholder => "Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> </div>
  <% end -%>

  <div>
  	<%= f.submit "Login", class: "btn btn-lg btn-warning btn-block" %>
  </div>

<% end %>
</div>