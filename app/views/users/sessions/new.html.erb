<h1>Welcome back!</h1>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<!-- TODO: ERROR CHECKING TO BE ADDED -->
  <!--   <%= devise_error_messages! %> 
   <%= f.alert_message "Please fix the errors below." %>
-->

  <%= f.email_field :email, autofocus: true, hide_label: true, :placeholder => "Email address" %></div>

  <div>
    <%= f.password_field :password, autocomplete: "off", hide_label: true, :placeholder => "Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> </div>
  <% end -%>

  <div>
  	<%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
  </div>

<% end %>

