<%= render "home/navbar" %>
<div class="container spec submitter">
<h1>Video Edit</h1>
<%= bootstrap_form_for @video do |f| %>
  <div>
    <%= f.text_field :title, placeholder: 'Title' %>
  </div>
  <div>
    <%= f.text_field :youtube_url, placeholder: 'YouTube URL' %>
  </div>
  <div>
    <%= f.text_area :description, placeholder: 'Add a description' %>
  </div>
  <div>
    <%= f.submit 'Update Video' %>
  </div>
<% end %>
</div>
