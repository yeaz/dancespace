<%= render "home/navbar" %>
<div class="container spec">
	<h1><b>All Videos</b></h1>

    <!-- SEARCH BAR -->
    <%= form_tag videos_path, :method => 'get' do %>
      <div>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      </div>
	<% end %>

    <%= @videos.size%>
	<% for v in @videos do %>
		<div class="row">
		<div class="listing-photo col-md-3">
			<a href=<%= video_path(v) %>> <img src="http://img.youtube.com/vi/<%=v.youtube_id%>/0.jpg" > </a>
			
		</div>
		<div class="col-md-6">
				<h3><b><a href=<%= video_path(v) %>><%= v.title %></a></h3></b>
				<h5><b>Shared by</b>:<br><%= link_to v.get_users_name, user_path(v.user_id) %></p></h5
				<div class="listing-blurb"><h5><%= v.description %></h5></div>
			</div>
		</div>
		<hr>
	<% end %>
</div>
