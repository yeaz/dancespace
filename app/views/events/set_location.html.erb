<% content_for :google_maps_js do %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyDCp9uQBt3IdKhOxbl1LgX1XFOCsKtdlRQ" %>
<% end %>

<!-- CSS is in maps.css -->

<div id="map-canvas"></div>
<div id="panel">
  <input id="address" type="textbox" placeholder="Stanford, CA"/>
  <input type="submit" onclick="codeAddress()" value="Change Location!"/>
</div>
<div id="error"></div>

<%= form_for @event do |f| %>
  <%= f.text_area :lat %>
  <%= f.text_area :lng %>
  <%= f.submit 'Set location' %>
<% end %>

<a href="<%= event_path(params[:event_id]) %>"> Skip setting location</a>
